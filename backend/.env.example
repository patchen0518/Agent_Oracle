# Environment configuration for Oracle Chat Backend
# Copy this file to .env and fill in your actual values

# Required: Gemini API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Server configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info

# Optional: System instruction type
# Available types: default, professional, technical, creative, educational
SYSTEM_INSTRUCTION_TYPE=default

# Optional: Gemini model to use
# Available models: gemini-2.5-flash, gemini-2.5-flash-lite, gemini-2.5-pro, etc.
GEMINI_MODEL=gemini-2.5-flash

# Optional: Persistent session feature flags
# Enable/disable persistent Gemini sessions (true/false)
USE_PERSISTENT_SESSIONS=true

# Gradual rollout percentage (0-100)
# Controls what percentage of sessions use persistent sessions
GRADUAL_ROLLOUT_PERCENTAGE=100

# Session timeout in seconds (default: 3600 = 1 hour)
PERSISTENT_SESSION_TIMEOUT=3600

# Maximum number of sessions to keep in memory (default: 500)
MAX_PERSISTENT_SESSIONS=500

# Cleanup interval in seconds (default: 300 = 5 minutes)
SESSION_CLEANUP_INTERVAL=300